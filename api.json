                        "name": "day",
                        "required": false
                    },
                    {
                        "schema": {
                            "type": "string",
                            "enum": [
                                "trending",
                                "newfollow",
                                "follow"
                            ]
                        },
                        "in": "query",
                        "name": "type",
                        "required": false
                    },
                    {
                        "schema": {
                            "type": "array",
                            "items": {
                                "type": "string",
                                "enum": [
                                    "manga",
                                    "manhwa",
                                    "manhua"
                                ]
                            }
                        },
                        "in": "query",
                        "name": "comic_types",
                        "required": false,
                        "description": "type manga, manhwa, manhua"
                    },
                    {
                        "schema": {
                            "type": "boolean",
                            "default": false
                        },
                        "in": "query",
                        "name": "accept_mature_content",
                        "required": false
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Default Response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "additionalProperties": true
                                }
                            }
                        }
                    }
                }
            }
        },

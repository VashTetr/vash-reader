        "/v1.0/search/": {
            "get": {
                "summary": "Search comics",
                "tags": [
                    "public"
                ],
                "parameters": [
                    {
                        "schema": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            },
                            "nullable": true,
                            "maxItems": 10
                        },
                        "in": "query",
                        "name": "genres",
                        "required": false,
                        "description": "the slugify of genre, ex: `genres=action&genres=romance`"
                    },
                    {
                        "schema": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            },
                            "nullable": true,
                            "maxItems": 40
                        },
                        "in": "query",
                        "name": "excludes",
                        "required": false,
                        "description": "the slugify of genre"
                    },
                    {
                        "schema": {
                            "type": "string",
                            "enum": [
                                "user",
                                "author",
                                "group",
                                "comic"
                            ],
                            "nullable": true
                        },
                        "in": "query",
                        "name": "type",
                        "required": false
                    },
                    {
                        "schema": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            },
                            "nullable": true,
                            "maxItems": 10
                        },
                        "in": "query",
                        "name": "tags",
                        "required": false,
                        "description": "the slugify of tags, ex: `tags=male-protagonist&tags=family`"
                    },
                    {
                        "schema": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            },
                            "nullable": true,
                            "maxItems": 30
                        },
                        "in": "query",
                        "name": "excluded-tags",
                        "required": false,
                        "description": "the slugify of excluded tags, ex: `excluded-tags=male-protagonist&tags=family`"
                    },
                    {
                        "schema": {
                            "type": "array",
                            "items": {
                                "type": "integer"
                            },
                            "nullable": true
                        },
                        "in": "query",
                        "name": "demographic",
                        "required": false,
                        "description": "1/shounen 2/shoujo 3/seinen 4/josei 5/none https://i.imgur.com/Rqy1Zxb.png, ex: `demographic=1&demographic=2`  *Can not be empty string*"
                    },
                    {
                        "schema": {
                            "type": "integer",
                            "default": 1,
                            "maximum": 50
                        },
                        "in": "query",
                        "name": "page",
                        "required": true
                    },
                    {
                        "schema": {
                            "type": "integer",
                            "default": 15,
                            "maximum": 300
                        },
                        "in": "query",
                        "name": "limit",
                        "required": true
                    },
                    {
                        "schema": {
                            "type": "integer",
                            "nullable": true
                        },
                        "in": "query",
                        "name": "time",
                        "required": false,
                        "description": "substract days, ex: `time=120`, ~4 month"
                    },
                    {
                        "schema": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            },
                            "nullable": true,
                            "maxItems": 10
                        },
                        "in": "query",
                        "name": "country",
                        "required": false,
                        "description": "Country code: kr, jp, cn,.. https://i.imgur.com/zQtStwR.png, ex: `country=kr&country=jp`"
                    },
                    {
                        "schema": {
                            "type": "integer",
                            "nullable": true
                        },
                        "in": "query",
                        "name": "minimum",
                        "required": false,
                        "description": "mininum number of chapters.ex `minimum=50`"
                    },
                    {
                        "schema": {
                            "type": "integer",
                            "nullable": true
                        },
                        "in": "query",
                        "name": "from",
                        "required": false,
                        "description": "from year, ex: `from=2010`"
                    },
                    {
                        "schema": {
                            "type": "integer",
                            "nullable": true
                        },
                        "in": "query",
                        "name": "to",
                        "required": false,
                        "description": "to year, ex: `to=2021`"
                    },
                    {
                        "schema": {
                            "type": "integer",
                            "nullable": true
                        },
                        "in": "query",
                        "name": "status",
                        "required": false,
                        "description": "1/Ongoing 2/Completed 3/Cancelled 4/Hiatus"
                    },
                    {
                        "schema": {
                            "type": "array",
                            "items": {
                                "type": "string",
                                "enum": [
                                    "safe",
                                    "suggestive",
                                    "erotica",
                                    "pornographic"
                                ]
                            },
                            "nullable": true
                        },
                        "in": "query",
                        "name": "content_rating",
                        "required": false,
                        "description": "safe, suggestive, erotica"
                    },
                    {
                        "schema": {
                            "type": "boolean",
                            "nullable": true
                        },
                        "in": "query",
                        "name": "tachiyomi",
                        "required": false,
                        "description": "**Tachiyomi is required for third party software.**"
                    },
                    {
                        "schema": {
                            "type": "boolean",
                            "nullable": true
                        },
                        "in": "query",
                        "name": "completed",
                        "required": false,
                        "description": "completed translation"
                    },
                    {
                        "schema": {
                            "type": "string",
                            "nullable": true,
                            "enum": [
                                "view",
                                "created_at",
                                "uploaded",
                                "rating",
                                "follow",
                                "user_follow_count",
                                ""
                            ]
                        },
                        "in": "query",
                        "name": "sort",
                        "required": false
                    },
                    {
                        "schema": {
                            "type": "boolean",
                            "nullable": true
                        },
                        "in": "query",
                        "name": "exclude-mylist",
                        "required": false,
                        "description": "Authentication is required."
                    },
                    {
                        "schema": {
                            "type": "boolean",
                            "default": false,
                            "nullable": true
                        },
                        "in": "query",
                        "name": "showall",
                        "required": false,
                        "description": "Include comics without chapters."
                    },
                    {
                        "schema": {
                            "type": "string",
                            "transform": [
                                "trim"
                            ],
                            "nullable": true
                        },
                        "in": "query",
                        "name": "q",
                        "required": false,
                        "description": "Search title with keywords, *ignore other parameters when q is a non-empty string*"
                    },
                    {
                        "schema": {
                            "type": "boolean",
                            "default": false,
                            "nullable": true
                        },
                        "in": "query",
                        "name": "t",
                        "required": false,
                        "description": "Include alt title for show only."
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Default Response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array"
                                }
                            }
                        }
                    }
                }
            }
        }
    }

        "/chapter/": {
            "get": {
                "summary": "Get latest chapters - homepage",
                "tags": [
                    "public"
                ],
                "parameters": [
                    {
                        "schema": {
                            "type": "array",
                            "nullable": true,
                            "items": {
                                "type": "string"
                            }
                        },
                        "in": "query",
                        "name": "lang",
                        "required": false,
                        "description": "Locale code https://developers.google.com/interactive-media-ads/docs/sdks/android/client-side/localization#locale-codes"
                    },
                    {
                        "schema": {
                            "type": "integer",
                            "default": 1,
                            "maximum": 200,
                            "nullable": true
                        },
                        "in": "query",
                        "name": "page",
                        "required": false
                    },
                    {
                        "schema": {
                            "type": "integer",
                            "enum": [
                                1,
                                2
                            ],
                            "nullable": true,
                            "maximum": 40
                        },
                        "in": "query",
                        "name": "gender",
                        "required": false
                    },
                    {
                        "schema": {
                            "type": "string",
                            "enum": [
                                "hot",
                                "new"
                            ],
                            "default": "hot",
                            "nullable": true
                        },
                        "in": "query",
                        "name": "order",
                        "required": false
                    },
                    {
                        "schema": {
                            "type": [
                                "integer",
                                "string",
                                "null"
                            ],
                            "nullable": true
                        },
                        "in": "query",
                        "name": "device-memory",
                        "required": false
                    },
                    {
                        "schema": {
                            "type": "boolean",
                            "nullable": true
                        },
                        "in": "query",
                        "name": "tachiyomi",
                        "required": false,
                        "description": "Tachiyomi is required for third party software."
                    },
                    {
                        "schema": {
                            "type": "array",
                            "items": {
                                "type": "string",
                                "enum": [
                                    "manga",
                                    "manhwa",
                                    "manhua"
                                ]
                            },
                            "nullable": true
                        },
                        "in": "query",
                        "name": "type",
                        "required": false,
                        "description": "type manga, manhwa, manhua"
                    },
                    {
                        "schema": {
                            "type": "array",
                            "items": {
                                "type": "string",
                                "enum": [
                                    "safe",
                                    "suggestive",
                                    "erotica",
                                    "pornographic"
                                ]
                            },
                            "nullable": true
                        },
                        "in": "query",
                        "name": "content_rating",
                        "required": false
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Default Response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array"
                                }
                            }
                        }
                    }
                }
            }
        },

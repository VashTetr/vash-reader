            "get": {
                "summary": "Get trending comics",
                "tags": [
                    "public"
                ],
                "parameters": [
                    {
                        "schema": {
                            "type": "integer",
                            "enum": [
                                1,
                                2
                            ],
                            "nullable": true,
                            "maximum": 40
                        },
                        "in": "query",
                        "name": "gender",
                        "required": false
                    },
                    {
                        "schema": {
                            "type": "integer",
                            "enum": [
                                180,
                                270,
                                360,
                                720
                            ],
                            "nullable": true
                        },
